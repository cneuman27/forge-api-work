                                            CellClickAction="SelectRecord" 
                                            AllowEdit="False" 
                                            Width="Auto"
                                            CellValuePresenterStyle="{StaticResource Style_CVP_Base}"/>
                                    </igDP:Field.Settings>
                                </igDP:Field>
                            </igDP:FieldLayout.Fields>
                        </igDP:FieldLayout>
                    </MOMControls:CMOMDataGrid.FieldLayouts>
                </MOMControls:CMOMDataGrid>
