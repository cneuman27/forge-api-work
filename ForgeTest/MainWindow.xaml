<MOMShared:CMOMForm x:Class="ForgeTest.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:ForgeTest"
                    xmlns:local_Converters="clr-namespace:ForgeTest.Converters"
                    xmlns:local_ViewerUI="clr-namespace:ForgeTest.ViewerUI"
                    xmlns:igWindows="http://infragistics.com/Windows"
                    xmlns:igDP="http://infragistics.com/DataPresenter"
                    xmlns:igEditors="http://infragistics.com/Editors"
                    xmlns:MOMControls="clr-namespace:MOMControls;assembly=MOMControls"
                    xmlns:MOMShared="clr-namespace:MOMShared;assembly=MOMShared"
                    mc:Ignorable="d"
                    Title="Forge Test" 
                    WindowStartupLocation="CenterScreen"
                    Height="570" 
                    Width="700"
                    MinHeight="570"
                    MinWidth="384"
                    Loaded="CMOMForm_Loaded">
    <MOMShared:CMOMForm.Resources>
        <local_Converters:Converter_DateTimeToTimeString x:Key="Converter_DateTimeToTimeString" />
    </MOMShared:CMOMForm.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <igWindows:XamTabControl Name="tabControlMain"
                                 Grid.Row="0"
                                 Margin="5">
            <igWindows:XamTabControl.Resources>
                <DataTemplate x:Key="Template_Header">
                    <TextBlock Name="txtHeader"
                               Text="{Binding}" />
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type igWindows:TabItemEx}}, Path=IsSelected}" 
                                     Value="True">
                            <Setter TargetName="txtHeader" 
                                    Property="FontWeight" 
                                    Value="Bold" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </igWindows:XamTabControl.Resources>
            <igWindows:TabItemEx Header="Bucket Management"
                                 HeaderTemplate="{StaticResource Template_Header}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <MOMControls:CMOMDataGrid Name="gridBucketManagement"
                                              Grid.Column="0"
                                              Margin="5"
                                              GroupByAreaLocation="None"
                                              SelectedItemsChanged="gridBucketManagement_SelectedItemsChanged">
                        <MOMControls:CMOMDataGrid.Resources>
                            <Style TargetType="{x:Type igDP:DataRecordPresenter}">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="{x:Type igDP:HeaderLabelArea}">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                            <Style x:Key="Style_CVP_Base"
                                   TargetType="{x:Type igDP:CellValuePresenter}">
                                <Setter Property="BorderBrush" Value="Black" />
                                <Setter Property="BorderThickness" Value="0,0,1,1" />
                                <Setter Property="Padding" Value="3,3,3,3" />
                            </Style>
                        </MOMControls:CMOMDataGrid.Resources>
                        <MOMControls:CMOMDataGrid.FieldLayouts>
                            <igDP:FieldLayout>
                                <igDP:FieldLayout.Settings>
                                    <igDP:FieldLayoutSettings 
                                        AutoGenerateFields="False" 
                                        AllowAddNew="False"
                                        AllowDelete="False" 
                                        SelectionTypeRecord="Single"
                                        AutoFitMode="ExtendLastField" />
                                </igDP:FieldLayout.Settings>
                                <igDP:FieldLayout.Fields>
                                    <igDP:Field Name="BucketKey"
                                                Label="Bucket">
                                        <igDP:Field.Settings>
                                            <igDP:FieldSettings 
                                                CellClickAction="SelectRecord" 
                                                AllowEdit="False" 
                                                LabelClickAction="Nothing"
                                                Width="Auto"                                          
                                                CellValuePresenterStyle="{StaticResource Style_CVP_Base}"/>
                                        </igDP:Field.Settings>
                                    </igDP:Field>
                                    <igDP:Field Name="CreateDate"
                                                Label="Created" >
                                        <igDP:Field.Settings>
                                            <igDP:FieldSettings 
                                                LabelClickAction="Nothing"
                                                CellClickAction="SelectRecord" 
                                                AllowEdit="False" 
                                                Width="Auto"
                                                CellValuePresenterStyle="{StaticResource Style_CVP_Base}"/>
                                        </igDP:Field.Settings>
                                    </igDP:Field>
                                    <igDP:Field Name="RetentionPolicy"
                                                Label="Retention Policy" >
                                        <igDP:Field.Settings>
                                            <igDP:FieldSettings 
                                                LabelClickAction="Nothing"
                                                CellClickAction="SelectRecord" 
                                                AllowEdit="False" 
                                                Width="Auto"
                                                CellValuePresenterStyle="{StaticResource Style_CVP_Base}"/>
                                        </igDP:Field.Settings>
                                    </igDP:Field>
                                </igDP:FieldLayout.Fields>
                            </igDP:FieldLayout>
                        </MOMControls:CMOMDataGrid.FieldLayouts>
                    </MOMControls:CMOMDataGrid>
                    <Rectangle Grid.Column="1"
                               Margin="0,5,0,5"
                               Fill="Black"
                               Width="2" />
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
